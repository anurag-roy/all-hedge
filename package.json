{
  "name": "all-hedge",
  "description": "A hedging strategy for F&O stocks using Shoonya APIs",
  "private": true,
  "version": "1.0.0",
  "author": "Anurag Roy <anuragroy@duck.com> (https://anuragroy.dev)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x tsx src/server/main.ts",
    "start": "NODE_ENV=production tsx src/server/main.ts",
    "build": "vite build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "data:prepare": "rimraf .data/data.db && tsx src/server/scripts/setupDb.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "better-sqlite3": "^9.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "ky": "^1.2.2",
    "lucide-react": "^0.354.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.3.0",
    "typescript": "^5.3.2",
    "vite-express": "*",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.3",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.2.16",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.18",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "prisma": "^5.10.2",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.2"
  },
  "prisma": {
    "schema": "src/server/db/schema.prisma"
  },
  "prettier": {
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true,
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-organize-imports"
    ]
  }
}
