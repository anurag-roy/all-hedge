{
  "name": "all-hedge",
  "description": "A hedging strategy for F&O stocks using Shoonya APIs",
  "private": true,
  "version": "1.0.0",
  "author": "Anurag Roy <anuragroy@duck.com> (https://anuragroy.dev)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x tsx src/server/main.ts",
    "start": "NODE_ENV=production tsx src/server/main.ts",
    "build": "vite build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "data:prepare": "npx prisma db seed"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.13.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "express": "^4.18.2",
    "jszip": "^3.10.1",
    "ky": "^1.2.2",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.354.0",
    "next-themes": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.2",
    "react-router-dom": "^6.22.3",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "totp-generator": "^1.0.0",
    "tsx": "^4.3.0",
    "typescript": "^5.3.2",
    "vite-express": "*",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.9.3",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.2.16",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.18",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "prisma": "^5.13.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.2"
  },
  "prisma": {
    "schema": "src/server/db/schema.prisma",
    "seed": "tsx src/server/db/seed/instrument.ts"
  },
  "prettier": {
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true,
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
